<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="/css/notes.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/highcharts.js"></script></script>
    <script type="text/javascript" src="/js/underscore-min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap.js" defer></script>
    <script src="/js/jquery.dataTables.min.js"></script>
    <script src="/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript" src="/js/shorthand-common.js" defer></script>
    <script type="text/javascript" src="/js/shorthand-record-sets.js" defer></script>
    <title>Notes</title>
</head>
<body>

<div class="row fullwrapper">

    <div class="col-md-1 gutter"></div>

    <div class="col-md-10 pagewrapper" style="min-height: 1000px;">

        <div class="row title-bar">
            <div class="col-md-3">
                <h1 id="notes-title">Notes</h1>
            </div>
            <div class="col-md-9" style="text-align: right;">
                <a href="/"><img class="svg-icon" src="/img/home-24.svg"></a>
                <a href="/todos"><img class="svg-icon" src="/img/tasklist-24.svg"></a>
                <a href="/questions"><img class="svg-icon" src="/img/question-24.svg"></a>
                <a href="/glossary"><img class="svg-icon" src="/img/book-24.svg"></a>
                <a href="/databases"><img class="svg-icon" src="/img/database-24.svg"></a>
                <a href="/calendar"><img class="svg-icon" src="/img/calendar-24.svg"></a>
                <a href="/browse"><img class="svg-icon" src="/img/quote-24.svg"></a>
                <a href="/search"><img class="svg-icon" src="/img/search-24.svg"></a>
                <a href="#"><img class="svg-icon" src="/img/sync-24.svg"></a>
                <a href="#"><img class="svg-icon" src="/img/settings-24.svg"></a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Record Sets</h2>
                    </div>
                </div>

                {% for record_set in record_sets %}
                <div class="alert alert-primary" role="alert">
                    <div class="row">
                        <div class="col-md-8">
                            Record set in: <a href="/render?path={{ record_set['file_path'] }}">{{ record_set['display_path'] }}</a>
                            <br>
                            line
                            <span class="lineNumber">{{ record_set['line_number'] }}</span>
                            <span class="filePath" style="display: none;">{{ record_set['file_path'] }}</span>
                        </div>
                        <div class="col-md-4" style="text-align: right;">
                            <a class="btn btn-primary showRec" data-toggle="collapse" href="#collapseExample{{ loop.index }}" role="button" aria-expanded="false" aria-controls="collapseExample">
                                View Contents
                            </a>
                            <a class="btn btn-warning getCsv" role="button">
                                Download CSV
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="collapse" id="collapseExample{{ loop.index }}" style="width: 100%">
                            <div class="card card-body" style="width:80%; margin: auto;">
                                <table id="record-set-table{{ loop.index }}" class="table table-striped table-bordered record-set-table" style="width:100%;">
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                {% endfor %}

            </div>
        </div>

    </div>
    <div class="col-md-1 gutter"></div>
</div>

<div id="errorWrapper">
  <div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Server Error</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div id="errorDescription" class="modal-body">
          placeholder
        </div>
      </div>
    </div>
  </div>
</div>

</body>
</html>
